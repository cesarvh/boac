#
# Install Python dependencies
#
container_commands:
  01_install_pip3:
    command: |
      curl -O https://bootstrap.pypa.io/get-pip.py
      python3 get-pip.py

  02_pip3_install_requirements:
    command: |
      sudo -- sh -c 'PATH=/usr/local/bin:$PATH pip3 install -r requirements.txt --upgrade'
